<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

    <body>
        <div class="animated-bg"></div>
        <div class="container">
            <%- include('../partials/nav.ejs') %>

                <main class="blogs content">
                    <h2>All Blogs</h2>

                    <% if(blogs.length> 0) { %>
                        <% blogs.forEach(blog=> { %>
                            <div class="blog-item">
                                <a href="/blogs/<%= blog._id %>">
                                    <h3 class="title">
                                        <%= blog.title %>
                                    </h3>
                                    <p class="snippet">
                                        <%= blog.snippet %>
                                    </p>
                                </a>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p>There are no blogs to display...</p>
                                    <% }%>
                </main>

                <%- include('../partials/footer.ejs') %>
        </div>
    </body>

</html>